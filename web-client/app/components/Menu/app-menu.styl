:local .appMenu
    padding: 0
    position: fixed
    left: 0
    top: 0
    width: 100%
    transition: 1s opacity
    opacity: 0.5

    ul
        padding: 0
        margin-left: 0
        display: flex
        align-items: center
        justify-content: center

    &:hover
        opacity: 0.8

        .bottomBorder
            width: 50%

:local .menuItem
    margin: 0.5%
    display: inline-block
    transition: .75s background
    cursor: pointer


    &:hover
        background: #4C9ED9
        

:local .menuLink
    display: inline-block
    color: lightgray
    text-decoration: none
    font-weight: bold
    padding: 1em
    

:local .bottomBorder
    width: 0
    transition: 1s width