:local .cell
    display: inline-block
    background-image: url('../assets/hexagon.png')
    z-index: 1000000
    background-size: cover
    height: 55px
    width: 50px
    text-align: center
    margin-right: 0.5em

    .text
        display: inline-block
        text-align: center
        padding: 1em 0

    &.one
        color: green

    &.two
        color: blue

    &.cut, &.empty
        visibility: hidden
